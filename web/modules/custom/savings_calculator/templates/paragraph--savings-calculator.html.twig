{#
/**
 * @file
 * SAVINGS CALCULATOR paragraph template.
 */
#}
{%
set classes = [
'paragraph',
'paragraph--type--' ~ paragraph.bundle|clean_class,
view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
]
%}
<div{{ attributes.addClass(classes) }}>
    <div class="paragraph-inner">
        {{ content._field_layout.content.parade_title }}
        {% if view_mode != 'preview' %}
        <form class="savings-calculator">
            <div class="savings-calculator__input-container">
                {{ content._field_layout.content.parade_input_label }}

                <div class="savings-calculator__inputs">
                    <input class="form-number" type="number" name="number" min="0">
                    <button class="button button--primary">{{ 'Calculate'|t }}</button>
                </div>
            </div>

            <div class="savings-calculator__result-container">
                {{ content._field_layout.content.parade_result_label }}
                <span class="result">0</span> â‚¬
            </div>
        </form>
        {% endif %}
    </div>
</div>
