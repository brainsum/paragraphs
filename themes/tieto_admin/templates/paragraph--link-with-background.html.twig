{%
set classes = [
	'paragraph',
	'paragraph--type--' ~ paragraph.bundle|clean_class,
	view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
]
%}
{% set enableParallax = content.field_enable_parallax['#items'].getValue()[0]['value'] == '1' %}
{% set background = file_url(content.field_background_image['#items'].entity.uri.value) %}
{% set anchor = content.field_anchor['#items'].getValue()[0].value %}

<div{{ attributes.addClass(classes).setAttribute('id', anchor ? anchor : '') }} {% if enableParallax %}data-parallax="scroll" data-bleed="100" data-position-y="-100px" data-image-src="{{ background }}"{% else %}style="background: url({{ background }}) no-repeat center center; background-size: cover;"{% endif %}>
	<section class="paragraph-inner">
		{{ content.field_url }}
	</section>
</div>
